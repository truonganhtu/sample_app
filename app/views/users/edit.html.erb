<% provide :title, t(".edit_user") %>
<% provide :submit, t(".save_changes") %>
<h1><%= t ".update_your_profile" %></h1>
<div class="row">
  <div class="mx-auto col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change"), Settings.gravatar_email_url, target: "_blank" %>
    </div>
  </div>  
</div>
