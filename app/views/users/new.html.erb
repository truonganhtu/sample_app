<% provide :title, t(".signup") %>
<h1><%= t ".signup" %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
      <%= f.label :name, t(".name") %>
      <%= f.text_field :name %>
      <%= f.label :email, t(".email") %>
      <%= f.email_field :email %>
      <%= f.label :password, t(".password") %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t(".confirmation") %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t(".create_account"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<p><%= t ".signup_message" %></p>
