<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, Settings.size.avatar.small), micropost.user %>
  <span class="user">
    <%= link_to micropost.name, micropost.user %>
  </span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
    </span>
    <span class="timestamp">
      <%= t ".post_time", time: time_ago_in_words(micropost.created_at) %>
  </span>
  <% if current_user? micropost.user %>
    <%= link_to t(".delete"), micropost, method: :delete,
      data: { confirm: t(".confirm") } %>
  <% end %>
</li>
