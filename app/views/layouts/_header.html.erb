<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), Settings.home_page %></li>
        <li><%= link_to t(".help"), Settings.help_page %></li>
        <% if logged_in? %>
        <li><%= link_to t(".users"), users_path %></li>
        <li class="dropdown">
          <%= link_to("#", class: "dropdown-toggle", "data-toggle": "dropdown" ) do %>
            <%= t "account" %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t(".profile"), user_path(current_user) %></li>
            <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t(".logout"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
        <% else %>
        <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
