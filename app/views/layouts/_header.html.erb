<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), Settings.home_page %></li>
        <li><%= link_to t(".help"), Settings.help_page %></li>
        <% if logged_in? %>
        <li><%= link_to t(".users"), '#' %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t ".account" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".profile"), user_path(locale, current_user) %></li>
            <li><%= link_to t(".settings"), '#' %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t(".logout"), logout_path(locale), method: :delete %>
            </li>
          </ul>
        </li>
        <% else %>
        <li><%= link_to t(".login"), login_path(locale) %></li>
        <% end %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= t ".languages" %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to t(".english"), {locale: "en"}, class: "dropdown-item" %>
            <%= link_to t(".vietnamese"), {locale: "vi"}, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </nav>
  </div>
</header>
